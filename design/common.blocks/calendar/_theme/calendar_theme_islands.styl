.calendar_theme_islands
{
    font-family: Arial, Helvetica, sans-serif;
    font-size: 14px;
    line-height: 18px;

    .calendar__title
    {
        text-align: left;
        text-transform: uppercase;

        color: #999;
    }

    .calendar__cell
    {
        padding: 6px 8px;

        cursor: pointer;

        &_state_active,
        &:hover
        {
            padding: 5px 7px;

            border: 1px solid rgba(3,3,3,0.2);
            border-radius: 3px;
        }

        &:nth-child(n + 6)
        {
            color: #e00;
        }

        &_state_disable
        {
            opacity: 0.3;

            &:hover
            {
                padding: 6px 8px;

                cursor: default !important;

                border: none !important;
            }
        }
    }

    .calendar__grid
    {
        margin: 10px 0 0;

        text-align: center;
    }

    .calendar__switcher
    {
        display: none;
    }
}
